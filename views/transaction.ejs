<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transactions</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.7.2/bootstrap-icons.min.css">
  </head>
  <body>
    <div class="container">
      <h1>Transactions for <%= user.username %> </h1>
      <div class="row">
        <div class="col">
          <p>Here is your list of things to do!</p>
          <a class="btn btn-lg btn-primary" href="/transaction/groupby">group by category</a>
          <a class="btn btn-lg btn-primary" href="?sortBy=category">sort by category</a>
          <a class="btn btn-lg btn-primary" href="?sortBy=amount">sort by amount</a>
          <a class="btn btn-lg btn-primary" href="?sortBy=description">sort by description</a>
          <a class="btn btn-lg btn-primary" href="?sortBy=date">sort by date</a>
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>description</th>
                <th>amount</th>
                <th>category</th>
                <th>date</th>
                <th>delete</th>
                <th>edit</th>
              </tr>
            </thead>
            <tbody><% items.forEach(item => { %> <tr>
                <td><%= item.Description %> </td>
                <td><%= item.Amount %> </td>
                <td><%= item.Category %> </td>
                <td><%= item.Date %> </td>
                <td>
                  <a href="transaction/remove/<%= item._id %>">
                    <i class="bi bi-trash"></i>
                  </a>
                </td>
                <td>
                  <a href="transaction/transactionedit/<%= item._id %>">
                    <i class="bi bi-pencil"></i>
                  </a>
                </td>
              </tr><% }) %> </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <h1>Add a New Transaction</h1>
          <form method="post" action="transaction">
            <div class="form-group">
              <label for="description">Description:</label>
              <input type="text" class="form-control" name="description" id="description">
            </div>
            <div class="form-group">
              <label for="category">Category:</label>
              <input type="text" class="form-control" name="category" id="category">
            </div>
            <div class="form-group">
              <label for="amount">Amount:</label>
              <input type="number" class="form-control" name="amount" id="amount">
            </div>
            <div class="form-group">
              <label for="date">Date:</label>
              <input type="date" class="form-control" name="date" id="date">
            </div>
            <button type="submit" class="btn btn-primary">Store</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>