<div class="container">
    <h2>Edit Transaction</h2>
    <pre class="bg-light border p-3 rounded">
      <%= JSON.stringify(item, null, 5) %>
    </pre>
    <form method="post" action="/transaction/update">
      <input type="hidden" name="itemId" value="<%= item._id %>">
      <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" class="form-control" name="Description" id="description" value="<%= item.Description %>">
      </div>
      <div class="form-group">
        <label for="category">Category:</label>
        <input type="text" class="form-control" name="Category" id="category" value="<%= item.Category %>">
      </div>
      <div class="form-group">
        <label for="amount">Amount:</label>
        <input type="number" class="form-control" name="Amount" id="amount" value="<%= item.Amount %>">
      </div>
      <div class="form-group">
        <label for="date">Date:</label>
        <input type="date" class="form-control" name="Date" id="date" value="<%= item.Date %>">
      </div>
      <button type="submit" class="btn btn-primary">Store</button>
    </form>
  </div>